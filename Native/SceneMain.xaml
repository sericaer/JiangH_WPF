<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:JiangH="clr-namespace:JiangH;assembly=JiangH.UI"
  mc:Ignorable="d" 
  d:DesignHeight="768" d:DesignWidth="1366">
    <Canvas>
        <StackPanel Orientation="Horizontal">
            <JiangH:ImageButton x:Name="player" Width="120" Height="150">
                <StackPanel>
                    <Label Name ="name" Content="name"/>
                    <Label Name ="office" Content="Office"/>
                </StackPanel>
            </JiangH:ImageButton>
            <JiangH:ImageButton x:Name="business" Width="160" Height="30" VerticalAlignment="Top" Margin="2,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Business"/>
                    <Label Content=":"/>
                    <Label Name ="businessValue" Content="--"/>
                </StackPanel>
            </JiangH:ImageButton>
        </StackPanel>
    </Canvas>
</UserControl>
